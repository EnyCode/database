---
const colors = [
  { color: "#f94144", hover: "#c62428" },
  { color: "#e9bc3f", hover: "#DAA520" },
  { color: "#10a2f5", hover: "#103ff5" },
  { color: "#24d05a", hover: "#208841" },
];

interface Props {
  href: string;
  includeBase?: boolean;
}

let { href, includeBase = true } = Astro.props;
if (href.startsWith("http")) {
  includeBase = false;
}
const randomColor = colors[Math.floor(Math.random() * colors.length)];
---

<a
  href=`${includeBase ? import.meta.env.BASE_URL : ""}${href}`
  style={`--underline-color: ${randomColor["color"]}; --underline-hover: ${randomColor["hover"]}`}
  ><slot /></a
>
