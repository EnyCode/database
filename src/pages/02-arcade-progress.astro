<script>
  const goal = document.getElementById("goal");
  const tickets = 27;
  const progress = document.getElementById("progress");

  if (!goal) {
    throw new Error("Goal input not found.");
  }
  if (!progress) {
    throw new Error("Progress bar not found.");
  }
  goal.onkeydown = function (evt) {
    let code = evt.keyCode;
    if (code > 31 && (code < 48 || code > 57)) {
      return false;
    }
    return true;
  };
  goal.onchange = function (evt) {
    const value = parseInt(evt.target.value);
    if (isNaN(value)) {
      return;
    }
    progress.style.background = `linear-gradient(to right, #09afb4 0%, #09afb4 ${
      (tickets / value) * 100
    }%, #f3e5c3 ${(tickets / value) * 100}%, #f3e5c3 100%)`;
  };

